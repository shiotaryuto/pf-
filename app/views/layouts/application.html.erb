<!DOCTYPE html>
<html>
  <head>
    <title>Gamers</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <li class="nav">
              <%= link_to "ゲーマーズ", root_path, class: "navbar-brand p-3 nav-link text-light" %>
            </li>
          　　<div class="collapse navbar-collapse" id="navbarNavDropdown">
            　　<ul class="navbar-nav ml-auto">
<% if user_signed_in? %>

  <li>
    <%= link_to "マイページ", public_user_path(:id), class: "pl-1" %>
   </li>
   <li>
    <%= link_to "投稿一覧", public_top_path, class: "d-flex justify-content-around" %>
   </li>
   <li>
     <%= link_to "新規投稿", new_public_game_path, class: "justify-content-end" %>
   </li>
    <li>
    <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "justify-content-end" %>
   </li>
  <% elsif admin_signed_in? %>
  <li>
    <%= link_to "投稿一覧", admin_top_path %>
   </li>
   <li>
    <%= link_to "ユーザー一覧", admin_users_path %>
   </li>
   <li>
    <%= link_to "ゲーム一覧", admin_game_titles_path %>
   </li>
    <li>
    <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
   </li>

  <% else %>
  <li>
    <%= link_to "アバウト", public_about_path %>
   </li>
   <li>
    <%= link_to "投稿一覧", public_games_path %>
   </li>
   <li>
    <%= link_to "新規登録", new_user_registration_path %>
   </li>
   <li>
    <%= link_to "ログイン", new_user_session_path %>
   </li>
  <% end %>
              </ul>
          </div>
        </div>
      </nav>
    </header>
   </body>

  <body>
    <%= yield %>
  </body>
</html>
