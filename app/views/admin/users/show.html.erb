<div class="container">
    <li class="navbar-brand p-3">
<h1>
<%= @user.first_name %><%= @user.last_name %>さんの会員詳細
</h1>
</li>

<table>

<tr>
<th class="pr-5" style="text-decoration:underline">会員ID</th>
<th style="text-decoration:underline"><%= @user.id %></th>
</tr>

<tr>
<th class="pr-5" style="text-decoration:underline">氏名</th>
<th style="text-decoration:underline"><%= @user.first_name %> <%= @user.last_name %></th>
</tr>

<tr>
<th class="pr-5" style="text-decoration:underline">フリガナ</th>
<th style="text-decoration:underline"><%= @user.first_name_kana %> <%= @user.last_name_kana %></th>
</tr>

<tr>
<th class="pr-5" style="text-decoration:underline">ニックネーム</th>
<th style="text-decoration:underline"><%= @user.nickname %></th>
</tr>

<tr>
<th class="pr-5" style="text-decoration:underline">メールアドレス</th>
<th style="text-decoration:underline"><%= @user.email %></th>
</tr>

<h2>
<%= link_to "編集する", edit_admin_user_path(@user.id), class: 'btn btn-sm btn-success' %>
</h2>
</table>
</div>