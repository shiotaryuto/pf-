<div class="container p-3">
    <li class="navbar-brand p-3">
     <h2>新規登録</h2>
    </li>

<div class="p-3">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

   <div class="field">
    <%= f.label :名前 %><br>
    性：<%= f.text_field :first_name, autofocus: true %>  名：<%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :フリガナ %><br>
    セイ：<%= f.text_field :first_name_kana %>  メイ：<%= f.text_field :last_name_kana %>
  </div>

  <div class='field'>
    <%= f.label :ニックネーム %><br>
    <%= f.text_field :nickname %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録する", class: 'btn btn-sm btn-success' %>
  </div>
<% end %>



<div>登録済みの方
<%= link_to "こちら", "/users/sign_in" %>
</div>

</div>

